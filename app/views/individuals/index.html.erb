<h1>Listing individuals</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Birth date</th>
    <th>Id number(type)</th>
    <th>Validity Period</th>
  </tr>

<% @individuals.each do |individual| %>
  <tr>
    <td><%=h individual.familyname %>, <%=h individual.givenname %></td>
    <td><%=h individual.birth_date %></td>
    <td><%=h individual.id_number %>(<%=h individual.id_type %>)</td>
    <td><%=h individual.valid_from.to_date %> to <%=h individual.valid_until.to_date %></td>
    <td><%= link_to 'Show', individual %></td>
    <td><%= link_to 'Edit', edit_individual_path(individual) %></td>
    <td><%= link_to 'Destroy', individual, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New individual', new_individual_path %>